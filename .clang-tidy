Checks: '-*,modernize-*,performance-*,readability-*,bugprone-*,cppcoreguidelines-*,clang-analyzer-*,misc-*,portability-*,google-*'
WarningsAsErrors: 'modernize-*,performance-*,readability-*,bugprone-*'
HeaderFilterRegex: '.*'
FormatStyle:     file
CheckOptions:
  - key:             modernize-use-nullptr.NullMacros
    value:           'NULL'
  - key:             modernize-use-auto.MinTypeNameLength
    value:           '5'
  - key:             modernize-use-override.IgnoreDestructors
    value:           '1'
  - key:             readability-identifier-naming.VariableCase
    value:           'camelBack'
  - key:             readability-identifier-naming.ClassCase
    value:           'CamelCase'
  - key:             readability-identifier-naming.FunctionCase
    value:           'CamelCase'
  - key:             cppcoreguidelines-pro-type-member-init.HaltOnMissingInit
    value:           '1'
